<script>
  // Selecciona el input y establece la longitud máxima permitida
  const input = document.querySelector('#test');
  const maxLength = 10;
  
  // Función que se ejecuta cada vez que se escribe algo en el input
  input.addEventListener('input', () => {
    // Obtiene la longitud actual del valor del input
    const currentLength = input.value.length;
    
    // Calcula la cantidad de caracteres faltantes
    const remainingChars = maxLength - currentLength;
    
    // Actualiza el elemento que muestra la cantidad de caracteres faltantes
    const remainingCharsElement = document.querySelector('#remaining-chars');
    remainingCharsElement.textContent = `Faltan ${remainingChars} caracteres`;
  });
</script>